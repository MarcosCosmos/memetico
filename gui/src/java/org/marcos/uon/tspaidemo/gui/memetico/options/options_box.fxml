<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.scene.text.TextFlow?>
<ScrollPane fx:id="memeticoOptionsBoxRoot" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.marcos.uon.tspaidemo.gui.memetico.options.OptionsBoxController">
    <VBox>
        <TextFlow styleClass="h1">
            <Text fx:id="txtMemeticoConfigTitle">Solver Configuration</Text>
        </TextFlow>
        <GridPane fx:id="gpMemeticoConfig" styleClass="optionGrid">
            <!--problem options-->
            <TextFlow styleClass="h2" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Text fx:id="memeticoProblemOptionsTitle">Problem Instance</Text>
            </TextFlow>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0" labelFor="$btnMemeticoSelectProblem">Problem Instance:</Label>
            <HBox GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                <Label fx:id="lblMemeticoProblemFile" styleClass="fileNameDisplay" HBox.hgrow="ALWAYS" labelFor="$btnMemeticoSelectProblem"/>
                <Button fx:id="btnMemeticoSelectProblem" onAction="#openProblemSelectionDialog">Choose File</Button>
            </HBox>
            <Label labelFor="$choiceMemeticoSolutionType" GridPane.rowIndex="2" GridPane.columnIndex="0">Solution Type:</Label>
            <ChoiceBox fx:id="choiceMemeticoSolutionType" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <String fx:value="Tour"/>
                <String fx:value="Cost"/>
            </ChoiceBox>
            <Label GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="lblMemeticoTourFileDesc" labelFor="$btnMemeticoSelectTour">Tour File:</Label>
            <HBox GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                <Label fx:id="lblMemeticoTourFile" styleClass="fileNameDisplay" labelFor="$btnMemeticoSelectTour"/>
                <Button fx:id="btnMemeticoSelectTour" onAction="#openTourSelectionDialog">Choose File</Button>
            </HBox>
            <Label GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="lblMemeticoTourCost" labelFor="$fldMemeticoTourCost">Tour Cost:</Label>
            <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="fldMemeticoTourCost" styleClass="intField"/>

            <!--evolutionary parameters-->
            <TextFlow styleClass="h2" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
               <Text fx:id="txtMemeticoEvolutionaryParamsTitle" >Evolutionary Parameters</Text>
            </TextFlow>
            <Label GridPane.rowIndex="5" GridPane.columnIndex="0" fx:id="lblMemeticoPopDepth" labelFor="$fldMemeticoPopDepth">Population depth (Excl root):</Label>
            <TextField GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="fldMemeticoPopDepth" styleClass="intField"/>
            <Label GridPane.rowIndex="6" GridPane.columnIndex="0" fx:id="lblMemeticoMutRate" labelFor="$fldMemeticoMutRate">Mutation rate (%):</Label>
            <TextField GridPane.rowIndex="6" GridPane.columnIndex="1" fx:id="fldMemeticoMutRate" styleClass="intField"/>
            <Label GridPane.rowIndex="7" GridPane.columnIndex="0" fx:id="lblMemeticoMaxGen" labelFor="$fldMemeticoMaxGen">Max generations:</Label>
            <TextField GridPane.rowIndex="7" GridPane.columnIndex="1" fx:id="fldMemeticoMaxGen" styleClass="intField"/>
            <Label GridPane.rowIndex="8" GridPane.columnIndex="0" fx:id="lblMemeticoLocalSearch" labelFor="$choiceMemeticoLocalSearch">Local search operation:</Label>
            <ChoiceBox fx:id="choiceMemeticoLocalSearch" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="9" GridPane.columnIndex="0" fx:id="lblMemeticoCrossover" labelFor="$choiceMemeticoCrossover">Crossover operation:</Label>
            <ChoiceBox fx:id="choiceMemeticoCrossover" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="10" GridPane.columnIndex="0" fx:id="lblMemeticoRestart" labelFor="$choiceMemeticoRestart">Restart operation:</Label>
            <ChoiceBox fx:id="choiceMemeticoRestart" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
        </GridPane>
        <Button fx:id="btnMemeticoApplyConfiguration" onAction="#applyConfiguration">Apply (Restarts Memetico)</Button>
        <TextFlow styleClass="h1">
            <Text fx:id="txtMemeticoDisplayOptionsTitle" styleClass="sectionTitle">Display Options</Text>
        </TextFlow>
        <GridPane styleClass="optionGrid">
            <!--display options-->
            <TextFlow styleClass="h2" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Text fx:id="memeticoGeneralDisplayOptionsTitle">General</Text>
            </TextFlow>
            <Label fx:id="lblMemeticoToggleTarget" GridPane.rowIndex="1" GridPane.columnIndex="0" labelFor="$cbMemeticoToggleTarget">Show Tour?</Label>
            <CheckBox GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="cbMemeticoToggleTarget"/>

            <TextFlow styleClass="h2" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Text fx:id="memeticoAgentDisplayOptionsTitle">Agents</Text>
            </TextFlow>
            <VBox fx:id="memeticoAgentOptionsWrapper" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
        </GridPane>
    </VBox>
</ScrollPane>