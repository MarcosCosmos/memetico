<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox fx:id="contentRoot" fx:controller="org.marcos.uon.tspaidemo.gui.memetico.MemeticoContentController"
      xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="dataWrapper" alignment="CENTER">
        <HBox>
            <Label fx:id="generationLabel" styleClass="test">Generation:</Label>
            <Text fx:id="generationText">Test</Text>
        </HBox>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER">
            <GridPane fx:id="agentsGrid" />
        </HBox>
    </VBox>
    <BorderPane fx:id="graphWrapper" VBox.vgrow="ALWAYS"/> <!-- empty dummy pane; simplifies update code to always have 2 items -->
</VBox>