<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<HBox fx:id="contentRoot" fx:controller="org.marcos.uon.tspaidemo.gui.memetico.MemeticoContentController"
      xmlns:fx="http://javafx.com/fxml">
    <ScrollPane fx:id="infoPane">
        <VBox fx:id="infoBox" alignment="CENTER">
            <BorderPane fx:id="titleBar">
                <left>
                    <TextFlow styleClass="h1" fx:id="tfProblemName">
                        <Text fx:id="lblProblemName">Problem:&#160;</Text>
                        <Text fx:id="txtProblemName"/>
                    </TextFlow>
                </left>
                <right>
                    <Button fx:id="btnOpenOptions" onAction="#showOptionsBox">Options</Button>
                </right>
            </BorderPane>
            <VBox styleClass="statisticsBox">
                <TextFlow>
                    <Text fx:id="lblTargetCost">Target cost:&#160;</Text>
                    <Text fx:id="txtTargetCost"/>
                </TextFlow>
                <TextFlow>
                    <Text fx:id="lblBestCost">Best found cost:&#160;</Text>
                    <Text fx:id="txtBestCost"/>
                </TextFlow>
                <TextFlow>
                    <Text fx:id="lblTeneration">Generation:</Text>
                    <Text fx:id="txtGeneration"/>
                </TextFlow>
                <TextFlow>
                    <Text fx:id="lblTimeGeneration">Time (Generation):&#160;</Text>
                    <Text fx:id="txtTimeGeneration"/>
                </TextFlow>
                <TextFlow>
                    <Text fx:id="lblTimeTotal">Time (Total):&#160;</Text>
                    <Text fx:id="txtTimeTotal"/>
                </TextFlow>
            </VBox>
            <HBox VBox.vgrow="ALWAYS" alignment="CENTER">
                <GridPane fx:id="agentsGrid" styleClass="dataGrid"/>
                <!--<TreeView fx:id="agentsTree"/>-->
            </HBox>
        </VBox>
    </ScrollPane>
    <BorderPane fx:id="graphWrapper" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
        <center>
            <BorderPane fx:id="graphContainer"/>
        </center>
    </BorderPane>
</HBox>